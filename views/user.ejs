<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="user-body">
        <div class="card">
            <div class="user-top">
                <div class="user-image">
                    <i class="fa-solid fa-user"></i>
                </div>
                <div class="user-right">
                    <% details.forEach((detail) => {%>
                        <div> <p><%= detail.member_username.toUpperCase() %></p></div>
                        <div><p><%= detail.member_email %></p></div>
                        <div></p><p><%= detail.member_id %></p></div>
                    <%})  %>

                </div>
            </div>
            <hr>
            <div class="user-bottom">
                <div class="borrowed">
                    <h2>Books Borrowed</h2>
                    <div class="borrowed-books">
                        <% booksBorrowed.forEach((book) => {%>
                            <div>
                                <p><%= book.book_name %></p>
                                <p><%= book.date_borrowed %></p>
                            </div>
                        <%}) %>
                        </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>